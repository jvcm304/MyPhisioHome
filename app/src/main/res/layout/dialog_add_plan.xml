
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dialog_body">


    <TextView
        android:id="@+id/add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Nuevo Plan"
        android:textAlignment="center"
        android:textSize="25sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_add_plan_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_plan"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_add_plan_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15sp"
            tools:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_add_plan_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_add_plan_nombre"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_add_plan_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoria"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15sp"
            tools:text="" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_add_plan_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_add_plan_categoria"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_add_plan_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripcion"
            android:inputType="textMultiLine"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="15sp"
            tools:text="" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear plan"
        android:layout_below="@+id/til_add_plan_descripcion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:backgroundTint="@color/accentColor"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>


</RelativeLayout>